@page "/ListaFacturas"
@using facturas.Components.Data
@using FacturaModel = facturas.Components.Data.Facturas
@using Microsoft.AspNetCore.Components
@rendermode InteractiveServer

<style>
    .seccion-baja {
        border: 1px solid black;
        padding: 15px;
        margin-bottom: 20px;
        background-color: #ffffff;
    }

    .tabla-registro {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .tabla-registro th, .tabla-registro td {
            border: 1px solid black;
            padding: 4px;
            text-align: left;
            font-size: 0.9em;
        }

        .tabla-registro th {
            background-color: #dddddd;
            font-weight: normal;
        }

    .pie-tabla {
        font-weight: bold;
        text-align: right;
        padding: 5px 0;
        border-top: 2px solid black;
        margin-top: 5px;
        font-size: 1.1em;
    }

    .btn-simple {
        background-color: #90a4ae;
        color: black;
        border: 1px solid #455a64;
        padding: 6px 10px;
        cursor: pointer;
        font-size: 0.9em;
    }

    .btn-eliminar-simple {
        background-color: #f44336;
        color: white;
        border: none;
        padding: 4px 8px;
    }

    .enlace-detalle {
        color: #007bff;
        text-decoration: underline;
        cursor: pointer;
    }

    .campo-texto {
        padding: 5px;
        border: 1px solid #333;
    }
</style>

<h1>Historial de Facturas Guardadas</h1>

<div class="seccion-baja" style="display: flex; gap: 10px; align-items: center;">
    <label>Filtrar por Cliente:</label>

    <input type="text" @bind="filtroCliente" @oninput="FiltrarFacturas" class="campo-texto" style="width: 300px;" />

    <button @onclick="LimpiarFiltro" class="btn-simple">Limpiar</button>
</div>

@if (facturas == null)
{
    <p>Cargando registros...</p>
}
else
{
    <div style="text-align: center; margin-bottom: 20px;">
        <button @onclick='() => Navegacion.NavigateTo("/Facturas")' class="btn-simple" style="background-color: #007bff; color: white; padding: 10px 20px;">
            Volver a Crear Factura
        </button>
    </div>

    @if (facturasFiltradas.Count == 0)
    {
        <p>No hay facturas que coincidan con el filtro o el sistema está vacío.</p>
    }
    else
    {
        @foreach (var f in facturasFiltradas)
        {
            <div class="seccion-baja" style="background-color: #f7f7f7;">
                <div style="border-bottom: 1px dashed #666; padding-bottom: 5px; margin-bottom: 10px;">
                    <h4 style="margin: 0;">
                        Factura ID:
                        
                        <a @onclick='() => Navegacion.NavigateTo($"/DetalleFactura/{f.Id}")' class="enlace-detalle">
                            #@f.Id
                        </a>
                    </h4>
                    <p style="margin: 5px 0 0 0;">Cliente: <strong>@f.Cliente</strong></p>
                    <p style="margin: 0;">Fecha: <strong>@f.Fecha.ToShortDateString()</strong></p>
                </div>

                <div class="pie-tabla" style="margin-top: 0;">
                    TOTAL: $@f.Total.ToString("C2")
                </div>

                <button @onclick="() => EliminarFactura(f)" class="btn-simple btn-eliminar-simple" style="margin-top: 10px;">Eliminar Factura</button>
            </div>
        }
    }
}

@code {
    private List<FacturaModel> facturas;
    private List<FacturaModel> facturasFiltradas;
    private string filtroCliente = string.Empty;

    
    [Inject]
    public NavigationManager Navegacion { get; set; }

    [Inject]
    public ServicioFacturas ServicioFacturas { get; set; }


    protected override async Task OnInitializedAsync()
    {
        try
        {
            facturas = await ServicioFacturas.ObtenerFacturas();
            AplicarFiltro();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"FATAL ERROR: Falló la conexión/carga inicial de la DB. Verifique Program.cs o permisos. Detalles: {ex.Message}");
            facturas = new List<FacturaModel>();
            facturasFiltradas = new List<FacturaModel>();
        }
    }


    private void FiltrarFacturas(ChangeEventArgs e)
    {
        filtroCliente = e.Value?.ToString() ?? string.Empty;
        AplicarFiltro();
    }

    private void AplicarFiltro()
    {
        if (string.IsNullOrWhiteSpace(filtroCliente))
        {
            facturasFiltradas = facturas;
        }
        else
        {
            facturasFiltradas = facturas
                .Where(f => f.Cliente.Contains(filtroCliente, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
        StateHasChanged();
    }


    private void LimpiarFiltro()
    {
        filtroCliente = string.Empty;
        AplicarFiltro();
    }

    private async Task EliminarFactura(FacturaModel f)
    {
        await ServicioFacturas.EliminarFactura(f);
        facturas = await ServicioFacturas.ObtenerFacturas();
        AplicarFiltro();
    }
}