@page "/Facturas"
@using facturas.Components.Data
@using FacturaModel = facturas.Components.Data.Facturas
@using ArticuloModel = facturas.Components.Data.Articulos
@inject ServicioFacturas ServicioFacturas
@rendermode InteractiveServer

<style>
 
    body {
        font-family: 'Times New Roman', serif; 
        background-color: #fcfcfc; 

    .seccion-baja {
        border: 1px solid black; 
        padding: 15px;
        margin-bottom: 20px;
        background-color: #ffffff;
    }

    .input-grupo {
        margin-bottom: 10px;
    }

    .campo-texto {
        width: 100%;
        padding: 5px;
        border: 1px solid #333;
        font-size: 0.9em;
        box-sizing: border-box;
    }

    .tabla-registro {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .tabla-registro th, .tabla-registro td {
            border: 1px solid black;
            padding: 4px;
            text-align: left;
        }

        .tabla-registro th {
            background-color: #dddddd; 
            font-weight: normal;
        }

    .fila-articulos {
        display: flex;
        gap: 5px;
        margin-top: 10px;
        align-items: center;
    }

    .btn-simple {
        background-color: #90a4ae; 
        color: black;
        border: 1px solid #455a64;
        padding: 6px 10px;
        cursor: pointer;
        font-size: 0.9em;
    }

    .btn-guardar {
        background-color: #4caf50; 
        color: white;
        border: 1px solid #388e3c;
        font-weight: bold;
    }

    .msg-error {
        color: #aa0000;
        margin-top: 10px;
        border: 1px solid #aa0000;
        background-color: #ffdddd;
        padding: 5px;
        font-size: 0.9em;
    }

    .pie-tabla {
        font-weight: bold;
        text-align: right;
        padding: 5px 0;
        border-top: 2px solid black;
        margin-top: 5px;
        font-size: 1.1em;
    }
</style>

<h1>Sistema Facturación Básico (v1)</h1>

<div class="seccion-baja">
    <h3>[ Crear Nueva Factura ]</h3>

    <div class="input-grupo">
        <label style="display: block; font-weight: bold;">Fecha:</label>
        <input type="date" @bind="nuevaFactura.Fecha" class="campo-texto" />
    </div>

    <div class="input-grupo">
        <label style="display: block; font-weight: bold;">Cliente:</label>
        <input @bind="nuevaFactura.Cliente" placeholder="Nombre de la persona" class="campo-texto" />
    </div>

    <h4 style="margin-top: 20px;">Artículos</h4>

    <table class="tabla-registro">
        <thead>
            <tr>
                <th style="width: 50%;">Descripción</th>
                <th style="width: 15%;">Cant.</th>
                <th style="width: 15%;">Precio Unitario</th>
                <th style="width: 20%;">Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in articulosTemp)
            {
                <tr>
                    <td>@a.Nombre</td>
                    <td>@a.Cantidad</td>
                    <td>@a.Precio.ToString("C2")</td>
                    <td>@a.Subtotal.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>

    @if (articulosTemp.Count > 0)
    {
        <div class="pie-tabla">
            TOTAL (Borrador): @articulosTemp.Sum(a => a.Subtotal).ToString("C2")
        </div>
    }

    <div class="fila-articulos">
        <input placeholder="Artículo" @bind="nuevoArticulo.Nombre" class="campo-texto" style="flex-basis: 40%;" />
        <input type="number" min="1" placeholder="Cant." @bind="nuevoArticulo.Cantidad" class="campo-texto" style="flex-basis: 15%;" />
        <input type="number" step="0.01" placeholder="Precio" @bind="nuevoArticulo.Precio" class="campo-texto" style="flex-basis: 20%;" />
        <button @onclick="AgregarArticuloTemp" class="btn-simple" style="flex-basis: 25%;">Agregar</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensajeError))
    {
        <p class="msg-error">! @mensajeError</p>
    }

    <button @onclick="GuardarFactura" class="btn-simple btn-guardar" style="width: 100%; margin-top: 20px; padding: 10px;">GUARDAR FACTURA FINAL</button>
</div>

<hr style="border-top: 1px solid #999; margin: 25px 0;" />

<h2>Factura Recientemente Guardada</h2>

@if (!string.IsNullOrWhiteSpace(facturaGuardadaMensaje))
{
    <div class="seccion-baja" style="background-color: #e6ffe6; border-color: #4caf50;">
        <p style="color: #388e3c; font-weight: bold;">¡Factura guardada con éxito!</p>
        <p>@facturaGuardadaMensaje</p>
    </div>
}
else
{
    <p>Guarda una factura para ver el resumen aquí.</p>
}

@code {
    private FacturaModel nuevaFactura = new() { Fecha = DateTime.Now.Date };
    private ArticuloModel nuevoArticulo = new();
    private List<ArticuloModel> articulosTemp = new();
    private string mensajeError = string.Empty;
    private string facturaGuardadaMensaje = string.Empty;

    private async Task GuardarFactura()
    {
        mensajeError = string.Empty;
        facturaGuardadaMensaje = string.Empty;

        if (string.IsNullOrWhiteSpace(nuevaFactura.Cliente))
        {
            mensajeError = "El campo 'Cliente' es obligatorio.";
        }
        else if (articulosTemp.Count == 0)
        {
            mensajeError = "Debe agregar al menos un artículo a la factura.";
        }

        if (string.IsNullOrWhiteSpace(mensajeError))
        {
            try
            {
                nuevaFactura.Articulos = new List<ArticuloModel>(articulosTemp);

               
                var totalFinal = nuevaFactura.Articulos.Sum(a => a.Subtotal).ToString("C2");
                facturaGuardadaMensaje = $"Factura a nombre de {nuevaFactura.Cliente} por un total de ${totalFinal}. ID asignado: {nuevaFactura.Id} (El ID real se asigna en la DB).";

              
                await ServicioFacturas.AgregarFactura(nuevaFactura);

                
                nuevaFactura = new FacturaModel() { Fecha = DateTime.Now.Date };
                nuevoArticulo = new ArticuloModel();
                articulosTemp = new List<ArticuloModel>();
            }
            catch (InvalidOperationException ex)
            {
                mensajeError = $"Error de base de datos: {ex.Message}";
                facturaGuardadaMensaje = string.Empty;
            }
            catch (Exception ex)
            {
                mensajeError = $"Ocurrió un error inesperado: {ex.Message}";
                facturaGuardadaMensaje = string.Empty;
            }

            StateHasChanged();
        }
    }

    private void AgregarArticuloTemp()
    {
        mensajeError = string.Empty;
        if (string.IsNullOrWhiteSpace(nuevoArticulo.Nombre) || nuevoArticulo.Cantidad <= 0 || nuevoArticulo.Precio <= 0)
        {
            mensajeError = "Debe especificar un nombre, cantidad (>0) y precio (>0) para el artículo.";
        }
        else
        {
            articulosTemp.Add(new ArticuloModel
            {
                Nombre = nuevoArticulo.Nombre,
                Cantidad = nuevoArticulo.Cantidad,
                Precio = nuevoArticulo.Precio
            });
            nuevoArticulo = new ArticuloModel();
        }
    }
}