@page "/DetalleFactura/{FacturaId:int}"
@using facturas.Components.Data
@using FacturaModel = facturas.Components.Data.Facturas
@using ArticuloModel = facturas.Components.Data.Articulos
@using Microsoft.AspNetCore.Components
@rendermode InteractiveServer

<style>
    .contenedor-detalle {
        border: 1px solid black;
        padding: 20px;
        background-color: #f7f7f7;
    }

    .info-header {
        border-bottom: 2px solid #333;
        margin-bottom: 15px;
        padding-bottom: 10px;
    }

    .tabla-registro {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .tabla-registro th, .tabla-registro td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        .tabla-registro th {
            background-color: #cccccc;
            font-weight: bold;
        }

    .pie-tabla-detalle {
        font-weight: bold;
        text-align: right;
        padding: 10px 0;
        font-size: 1.2em;
    }

    .btn-simple {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        margin-top: 20px;
    }
</style>

<h1>Detalle de Factura #@FacturaId</h1>

@if (factura == null)
{
    <p>Cargando detalles o factura no encontrada...</p>
}
else
{
    <div class="contenedor-detalle">
        <div class="info-header">
            <p><strong>Cliente:</strong> @factura.Cliente</p>
            <p><strong>Fecha de Emisión:</strong> @factura.Fecha.ToShortDateString()</p>
        </div>

        <h3 style="margin-top: 20px;">Artículos Facturados</h3>

        <table class="tabla-registro">
            <thead>
                <tr>
                    <th style="width: 60%;">Artículo</th>
                    <th style="width: 10%;">Cantidad</th>
                    <th style="width: 15%;">Precio Unitario</th>
                    <th style="width: 15%;">Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var a in factura.Articulos)
                {
                    <tr>
                        <td>@a.Nombre</td>
                        <td>@a.Cantidad</td>
                        <td>@a.Precio.ToString("C2")</td>
                        <td>@a.Subtotal.ToString("C2")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pie-tabla-detalle">
            TOTAL DE LA FACTURA: $@factura.Total.ToString("C2")
        </div>

        <button @onclick='() => Navegacion.NavigateTo("/ListaFacturas")' class="btn-simple">
            Volver al Historial
        </button>
    </div>
}

@code {
    [Parameter]
    public int FacturaId { get; set; }

    private FacturaModel factura;

    [Inject]
    public NavigationManager Navegacion { get; set; }

    [Inject]
    public ServicioFacturas ServicioFacturas { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            factura = await ServicioFacturas.ObtenerFacturaPorId(FacturaId);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar el detalle: {ex.Message}");
            factura = null;
        }
    }
}