@page "/Dashboard"
@using facturas.Components.Data
@using System.Threading
@inject ServicioFacturas ServicioFacturas
@inject NavigationManager Navegacion
@implements IDisposable
@rendermode InteractiveServer

<style>
    /* VARIABLES GLOBALES DEL DASHBOARD */
    :root {
        --dashboard-red: #b3261e;
        --dashboard-gradient-start: #b3261e;
        --dashboard-gradient-end: #e6b0aa;
    }

    /* CONTENEDOR DE GRÁFICA */
    .chart-container {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        height: 250px;
        padding-top: 20px;
        gap: 5px;
    }

    .bar-group {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        justify-content: flex-end;
        height: 100%;
    }

    .bar {
        width: 100%;
        max-width: 30px;
        background: linear-gradient(180deg, var(--dashboard-gradient-start) 0%, var(--dashboard-gradient-end) 100%);
        border-radius: 4px 4px 0 0;
        min-height: 4px;
        transition: height 1s ease-out;
    }

    .bar-label {
        font-size: 0.7rem;
        color: #777;
        margin-top: 5px;
        font-weight: 500;
    }

    .bar-value {
        font-size: 0.65rem;
        color: #333;
        margin-bottom: 2px;
        font-weight: bold;
    }

    /* ETIQUETAS Y TEXTOS */
    .stat-label {
        color: #757575;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin-bottom: 8px;
        letter-spacing: 0.5px;
        font-weight: 500;
    }

    .stat-value-uniform {
        color: var(--dashboard-red) !important;
        font-size: 2em;
        font-weight: 500;
        margin: 0;
    }

    .stat-sub {
        font-size: 0.85em;
        color: #888;
        display: block;
        margin-top: 4px;
    }

    .text-red-uniform {
        color: var(--dashboard-red) !important;
    }
</style>

<div style="margin-bottom: 24px;">
    <h1>Dashboard</h1>
    <p style="color: #666;">Resumen ejecutivo en tiempo real.</p>
</div>

@if (stats == null || !stats.DatosCargados)
{
    <p>Cargando estadísticas...</p>
}
else
{
    <div style="display: flex; gap: 20px; flex-wrap: wrap; margin-bottom: 20px;">
        <div class="card-m3" style="flex: 1; min-width: 250px;">
            <div class="stat-label">Ventas Hoy</div>
            <h2 class="stat-value-uniform">@FormatoMoneda(stats.VentasHoy)</h2>
        </div>

        <div class="card-m3" style="flex: 1; min-width: 250px;">
            <div class="stat-label">Ingresos Mes</div>
            <h2 class="stat-value-uniform">@FormatoMoneda(stats.VentasMes)</h2>
        </div>

        <div class="card-m3" style="flex: 1; min-width: 250px;">
            <div class="stat-label">Más Vendido</div>
            <h2 style="margin: 0; font-size: 1.8em; font-weight: 400;" class="text-red-uniform">@stats.ProductoMasVendido</h2>
            <span class="stat-sub">@stats.CantidadProductoMasVendido unidades</span>
        </div>
    </div>

    <div class="card-m3" style="margin-bottom: 20px;">
        <h3 style="margin: 0 0 16px 0; font-size: 1.1em; color: #b3261e; display: flex; align-items: center; gap: 8px;">
            <span>🥇</span> Top Usuarios
        </h3>

        <div style="display: flex; gap: 40px; flex-wrap: wrap;">
            <div style="flex: 1;">
                <span style="color: #666; font-size: 0.9em;">Mayor Facturador:</span><br />
                <div style="margin-top: 4px;">
                    <span style="font-size: 1.1em; font-weight: bold; color: #201a19;">@stats.ClienteMayorFacturador</span>
                    <span class="text-red-uniform" style="font-weight: bold; margin-left: 8px;">(@FormatoMoneda(stats.MontoMayorFacturador))</span>
                </div>
            </div>

            <div style="flex: 1;">
                <span style="color: #666; font-size: 0.9em;">Más Activo:</span><br />
                <div style="margin-top: 4px;">
                    <span style="font-size: 1.1em; font-weight: bold; color: #201a19;">@stats.ClienteMasActivo</span>
                    <span class="text-red-uniform" style="font-weight: bold; margin-left: 8px;">(@stats.CantidadFacturasMasActivo facts.)</span>
                </div>
            </div>
        </div>
    </div>

    <div style="display: flex; gap: 20px; flex-wrap: wrap; margin-bottom: 20px;">

        <div class="card-m3" style="flex: 1; min-width: 200px; margin-bottom: 0;">
            <div class="stat-label">Total Facturas</div>
            <div class="stat-value-uniform">@stats.TotalFacturasHistorico</div>
        </div>

        <div class="card-m3" style="flex: 1; min-width: 200px; margin-bottom: 0;">
            <div class="stat-label">Ticket Promedio</div>
            <div class="stat-value-uniform">@FormatoMoneda(stats.TicketPromedio)</div>
        </div>

        <div class="card-m3" style="flex: 1; min-width: 200px; margin-bottom: 0;">
            <div class="stat-label">Mejor Mes</div>
            <div class="text-red-uniform" style="font-size: 1.3em; font-weight: bold;">@stats.MejorMesNombre</div>
            <span class="stat-sub">@stats.MejorMesCantidad facturas registradas</span>
        </div>
    </div>

    <div style="display: flex; gap: 24px; flex-wrap: wrap; align-items: flex-start;">

        <div style="flex: 1; min-width: 300px; display: flex; flex-direction: column;">
            <div class="card-m3" style="padding: 0; overflow: hidden; border: 1px solid #eee;">
                <div style="background-color: var(--dashboard-red); color: white; padding: 12px 20px; display: flex; justify-content: space-between; align-items: center;">
                    <h3 style="margin: 0; font-size: 1rem; color: white; font-weight: 500;">Actividad Reciente</h3>
                    <a href="/ListaFacturas" style="color: white; font-size: 0.85em; text-decoration: underline;">Ver todas</a>
                </div>

                <table class="table-m3" style="margin-top: 0;">
                    <tbody>
                        @if (stats.UltimasFacturas.Any())
                        {
                            @foreach (var f in stats.UltimasFacturas)
                            {
                                <tr>
                                    <td style="padding: 12px 20px;">@f.Cliente</td>
                                    <td style="color: #666; font-size: 0.9em; text-align: right;">@f.Fecha.ToShortDateString()</td>
                                    <td style="text-align: right; font-weight: bold; padding: 12px 20px;" class="text-red-uniform">@FormatoMoneda(f.Total)</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="3" style="text-align:center; padding: 20px;">Sin datos recientes.</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div style="width: 500px; min-width: 300px;">
            <div class="card-m3">
                <div class="stat-label">Historial de Ventas (5 Meses)</div>
                @if (stats.HistoricoVentas.Any())
                {
                    var maxVal = stats.HistoricoVentas.Max(x => x.Valor);
                    if (maxVal == 0) maxVal = 1;

                    <div class="chart-container">
                        @foreach (var item in stats.HistoricoVentas)
                        {
                            var altura = (item.Valor / maxVal) * 100;
                            <div class="bar-group">
                                <span class="bar-value text-red-uniform">@((item.Valor / 1000).ToString("0.#"))k</span>
                                <div class="bar" style="height: @altura%;"></div>
                                <span class="bar-label">@item.Etiqueta</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p style="text-align: center; color: #999; padding: 20px;">Sin datos suficientes para graficar.</p>
                }
            </div>
        </div>
    </div>
}

@code {
    private Estadisticas stats;
    private PeriodicTimer? timer;
    private CancellationTokenSource? cts;

    private string FormatoMoneda(decimal monto)
    {
        return monto.ToString("C2", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"));
    }

    protected override void OnInitialized()
    {
        cts = new CancellationTokenSource();
        _ = IniciarActualizacionAutomatica();
    }

    private async Task IniciarActualizacionAutomatica()
    {
        stats = await ServicioFacturas.ObtenerDashboard();
        await InvokeAsync(StateHasChanged);

        timer = new PeriodicTimer(TimeSpan.FromSeconds(5));

        try
        {
            while (await timer.WaitForNextTickAsync(cts!.Token))
            {
                stats = await ServicioFacturas.ObtenerDashboard();
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (OperationCanceledException)
        {
        }
    }

    public void Dispose()
    {
        cts?.Cancel();
        cts?.Dispose();
        timer?.Dispose();
    }
}